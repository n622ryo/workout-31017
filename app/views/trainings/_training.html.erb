<div class="card">
  <div class="card__body">
    <%# //トレーニングの目的 %>
    <%= link_to training.title, training_path(training.id), class: :card__title%>
    <%# //お気に入りボタンの追加%>
    <% if user_signed_in? %>
      <% if training.favorited_by?(current_user) %> <!-- ログインしているユーザーがファボしたかどうかで分岐 -->
          <p><span>お気に入り解除: </span><%=link_to training.favorites.count, training_favorites_path(training.id), method: :delete %></p>
      <% else %>
          <p><span>お気に入り登録: </span><%=link_to training.favorites.count, training_favorites_path(training.id), method: :post %></p>
      <% end %>
    <% else %>
        <p><span>お気に入り数: </span><%= training.favorites.count %></p>
    <% end %>
      <%# //ユーザー名 %>
    <%= link_to "by #{training.user.name}", training_path(training.id), class: :card__user %>
  </div>
</div>