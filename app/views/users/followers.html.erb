<div class="inner">
  <h1>フォロワー</h1>
  <% @users.each do |user| %>
    <hr>
    <p>ユーザー名: <%= link_to "#{user.name}さん", user_path(user.id), class: :greeting__link %></p>
    <p>email: <%= link_to user.email, user_path(user.id), class: :mail__link %></p>
      <% if current_user != user %>
          <% if user.followed_by?(current_user) %>
              <p><%=link_to "フォロー済み", user_relationships_path(user.id), method: :delete %></p>
          <% else %>
              <p><%=link_to "フォローする", user_relationships_path(user.id), method: :post %></p>
          <% end %>
      <% end %>
  <% end %>
</div>