<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー編集</h2>
      <%= form_with model: @user, url: user_path(current_user), local: true do |f|%>
        <%= render 'devise/shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :name, "ニックネーム"%><br />
          <%= f.text_area :name %>
        </div>

        <div class="field">
          <%= f.label :target, "最終目標"%><br />
          <%= f.text_area :target, class: :form__text %>
        </div>

        <div class="actions">
          <%= f.submit"保存する", class: :form__btn %>
      <% end %>
    </div>
  </div>
</div>