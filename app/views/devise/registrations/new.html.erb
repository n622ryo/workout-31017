<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading">ユーザー新規登録</h2>

      <%= form_with model: @user, url: user_registration_path, local: true do |f| %>
        <%= render 'devise/shared/error_messages', model: f.object %>

        <div class="field">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "パスワード(半角英数6文字以上)" %><br />
          <%# password_firldのidなどの付与の仕方注意必要。またjsで付与したidには文頭に"js"をつけることでわかりやすくなる %>
          <%= f.password_field :password, id: "js-password", autocomplete: "new-password" %> 
          <input type="checkbox" id="js-passwordCheck" ><a id="js-pwdBtnText" >パスワードを表示する
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "パスワード（確認）" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>

        <div class="field">
          <%= f.label :name, "ニックネーム" %><br />
          <%= f.text_field :name %>
        </div>

        <div class="field">
          <%= f.label :target, "最終目標" %><br />
          <%= f.text_area :target, placeholder:"ボディメイクやダイエットなどの具体的目標の記入！", class: :form__text %>
        </div>


        <div class="actions">
          <%= f.submit "新規登録", class: :form__btn  %>
        </div>
      <% end %>
    </div>
  </div>
</div>